" Use space as leader key
let g:mapleader = "\<Space>"
set nocompatible
filetype on
filetype plugin on
filetype indent on
syntax on
colorscheme torte
set number
set mouse=a
set hlsearch
set incsearch
set ignorecase
set smartcase
set autoindent
set smarttab
set nowrap
set showcmd
set noshowmatch
nnoremap <leader>/ :noh<CR>
vnoremap <leader>y "+y
nnoremap <leader>y :%y+<CR>
" Resize splits if window got resized
augroup resize_splits
  autocmd!
  autocmd VimResized * wincmd =
augroup END
" Neovim or Vim 9.0+
if has("nvim") || has('vim9script')
  " Enable termguicolors if terminal supports it
  if has("termguicolors")
    set termguicolors
  endif
  "colorscheme unokai
  set list
  set listchars=tab:▸\ ,trail:·,nbsp:␣
endif
