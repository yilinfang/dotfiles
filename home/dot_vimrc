" Use space as leader key
let g:mapleader = "\<Space>"
set nocompatible
filetype on
filetype plugin on
filetype indent on
syntax on
set number
set mouse=a
set hlsearch
set incsearch
set ignorecase
set smartcase
set autoindent
set smarttab
set nowrap
set showcmd
set noshowmatch
set list
set listchars=tab:▸\ ,trail:·,nbsp:␣
nnoremap <leader>/ :noh<CR>
vnoremap <leader>y "+y<CR>
" Disable macro record/play and dot repeat
nnoremap q <Nop>
nnoremap Q <Nop>
nnoremap @ <Nop>
nnoremap . <Nop>
" Resize splits if window got resized
augroup resize_splits
  autocmd!
  autocmd VimResized * wincmd =
augroup END
" Enable termguicolors if terminal supports it
if has("termguicolors")
  set termguicolors
endif
set background=dark
" Enable wildcharm with torte as a backup
if !empty(globpath(&runtimepath, "colors/wildcharm.vim"))
  colorscheme wildcharm
else
  colorscheme torte
endif
